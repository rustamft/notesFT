<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.rustamft.notesft.presentation.screen.editor.EditorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.screen.editor.EditorFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edittext_note"
                style="@style/EditText"
                android:importantForAutofill="no"
                android:labelFor="@id/edittext_note"
                android:onTextChanged="@{() -> viewModel.onEditTextChanged(fabSave)}"
                android:text="@{viewModel.noteLiveData.text}"
                android:theme="@style/EditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_fab"
            android:contentDescription="@string/action_save"
            android:onClick="@{(view) -> viewModel.onNoteSave(view, edittextNote)}"
            android:src="@drawable/ic_save"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="?colorOnPrimary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>